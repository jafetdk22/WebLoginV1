@model OtraPrueba.Models.Request.Login.LoginPostRequest
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container text-center px-10">
    <div class="card w-70" style="margin:0 auto;">
        <div class="card-header">
            <h1>
                @Localizer["Logo"]
            </h1>
        </div>
        <div class="card-body">
            <form action="Login/PostLogin" method="post">
                <div class="row px-5 mb-3">
                    <label for="" class="fw-bold">@Localizer["UsernameOrEmail"]</label>
                    <input type="text" asp-for="UsernameOrEmail" class="form-control form-control-sm" placeholder="@Localizer["PlaceholderUsername"]">
                </div>
                <div class="row px-5 mb-3">
                    <label for="" class="fw-bold">@Localizer["Password"]</label>
                    <input type="password" asp-for="Password" class="form-control form-control-sm" placeholder="@Localizer["PlaceholderPassword"]">
                </div>
                <div class="row  justify-content-center">
                    <div class="col-md-6">
                        <button class="btn btn-sm" type="submit" style="background-color:#172b4d; color:#ffff;" onclick="KTApp.showPageLoading();">@Localizer["Login"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @* <script src="~/js/Membresia/epica.membresia.index.js" asp-append-version="true"></script> *@
    <script>
        var success = '@(TempData["Success"] ?? string.Empty)';
        var errorTemp = '@(TempData["Error"] ?? string.Empty)';

        if (success !== '') {
            showAlert(success, "success");
        }
        if (errorTemp !== '') {
            showAlert(errorTemp, "danger");
        }

        function showAlert(message, alertType) {
            var display = "d-block";
            var alertElement = document.createElement('div');
            alertElement.innerHTML = '<div class="alert alert-' + alertType + ' fade show position-fixed top-0 end-0 m-3 ' + display + '" role="alert">' + message + '<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button></div>';
            document.body.appendChild(alertElement);

            setTimeout(function () {
                $(alertElement).alert('close');
            }, 8000);
        }

    </script>
}